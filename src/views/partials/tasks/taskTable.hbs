{{!-- Si hay algun registro va a mostrar la tabla --}}
{{#if tasks}}
<div class="text-white">
<table class="table table-bordered table-hover table-dark" id="myTable" style="text:white;">
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Telefono</th>
            <th>Edad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        
        {{#each tasks}} {{!-- Es el ciclo que repite la cantidad de veces los campos que se tienen en la bd --}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{correo}}</td>
            <td>{{telefono}}</td>
            <td>{{edad}}</td>
            <td><a href="/delete/{{_id}}" class="btn btn-danger m-1">Eliminar<a href="/edit/{{_id}}" class="btn btn-primary ms-1">Actualizar</a></td>{{!-- Redirecciona a la funcion de edit  --}}
        </tr>


        {{/each}}
    </tbody>
</table>

        {{else}}{{!-- si no se cumple la condicion del if se muestra un icono :( en lugar de la tabla--}}
        <div class="h100 d-flex align-items-center justify-content-center">
        <div class="text-center text-white">
            <h1> No hay registros</h1>
            <br>
            <img src="/icons/56924.png" class="w-75">
        </div>
        </div>
</div>
{{/if}}