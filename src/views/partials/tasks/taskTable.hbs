{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Telefono</th>
            <th>Edad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{correo}}</td>
            <td>{{telefono}}</td>
            <td>{{edad}}</td>
            <td><a href="/delete/{{_id}}" class="btn btn-danger">Eliminar<a href="/edit/{{_id}}" class="btn btn-primary ms-1">Actualizar</a></td>
        </tr>


        {{/each}}
    </tbody>
</table>
        {{else}}
        <div class="h100 d-flex align-items-center justify-content-center">
        <div class="text-center text-white">
            <h1> No hay registros</h1>
            <br>
            <img src="/icons/56924.png" class="w-75">
        </div>
        </div>
{{/if}}