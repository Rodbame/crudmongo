<table class="table">
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Telefono</th>
            <th>Edad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{correo}}</td>
            <td>{{telefono}}</td>
            <td>{{edad}}</td>
            <td><a href="/delete/{{_id}}" class="btn btn-danger">Eliminar<a href="/edit/{{_id}}" class="btn btn-info ms-1">Actualizar</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>